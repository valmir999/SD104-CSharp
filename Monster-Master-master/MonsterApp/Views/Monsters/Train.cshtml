@model IEnumerable<MonsterApp.Context.Monster>

@{
    ViewData["Title"] = "Train";
}

<h2>Train My Monsters</h2>

<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Defense)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Health)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    <a asp-action="Attack" asp-route-id="@item.MonsterId">Attack</a>
                </td>
                <td>
                    <a asp-action="Defense" asp-route-id="@item.MonsterId">Defense</a>
                </td>

            </tr>
        }

    </tbody>

</table>
@if (TempData["EarnedNewGold"] != null)
{
    <div class="form-group">
        Congratulations! You just earned a Gold coin!!
    </div>
}
