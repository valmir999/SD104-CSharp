@model IEnumerable<MonsterApp.Context.Monster>

@{
    ViewData["Title"] = "All Monsters";
}

<h2>All Monsters</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Health)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attack)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Defense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Health)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Attack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Defense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MonsterId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MonsterId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MonsterId">Delete</a> |
                <a asp-action="Purchase" asp-route-id="@item.MonsterId">Purchase</a>
            </td>
        </tr>
}
    </tbody>
</table>
